<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomMenuButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#424242</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingVertical">20dp</item>
    </style>
    <!-- Light Theme -->
    <style name="AppTheme.Light" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryDark">#303F9F</item>
        <item name="colorAccent">#FF4081</item>

    </style>

    <!-- Dark Theme -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">#212121</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="SettingsItemStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/settings_item_background_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
    </style>

