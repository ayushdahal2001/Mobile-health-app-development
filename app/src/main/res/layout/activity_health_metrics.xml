<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Manage Health Metrics"-->
<!--            android:textSize="24sp"-->
<!--            android:textColor="#000000"-->
<!--            android:textStyle="bold"-->
<!--            android:layout_marginBottom="24dp"/>-->

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:layout_marginBottom="24dp"
            android:paddingTop="120dp">

            <Button
                android:id="@+id/btnViewData"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Data"
                android:background="@drawable/button_background"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnSyncDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Sync Device"
                android:background="@drawable/button_background"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnExport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Export"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <!-- Steps Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Steps Today"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvStepsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8,432"
                android:textSize="24sp"
                android:textColor="#2196F3"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Goal: 10,000 steps"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Weekly Activity Chart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weekly Activity"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <!-- This would be replaced with an actual chart view in production -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="16dp">

                <!-- Monday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <!-- Tuesday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <!-- Wednesday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <!-- Thursday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <!-- Friday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <!-- Saturday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="#2196F3"
                    android:layout_marginEnd="4dp"/>

                <!-- Sunday -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    android:background="#2196F3"/>
            </LinearLayout>

            <!-- Day Labels -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Mon"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tue"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Wed"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Thu"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fri"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sat"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sun"
                    android:textSize="12sp"
                    android:textColor="#666666"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Device Connection -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/card_background"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Connection"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected"
                android:textSize="16sp"
                android:textColor="#4CAF50"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/btnSyncDeviceData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Device Data"
                android:layout_marginTop="16dp"
                android:background="@drawable/primary_button_background"
                android:textColor="#FFFFFF"/>

            <Button
                android:id="@+id/btnConnectNewDevice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Connect New Device"
                android:layout_marginTop="8dp"
                android:background="@drawable/button_background"/>
        </LinearLayout>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:background="#F5F5F5"
            android:paddingVertical="8dp">

            <Button
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Home"
                android:background="@android:color/transparent"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btnHealthMetrics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Health Metrics"
                android:background="@android:color/transparent"
                android:textColor="#2196F3"/>

            <Button
                android:id="@+id/btnNotification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Notification"
                android:background="@android:color/transparent"
                android:textColor="#000000"/>

            <Button
                android:id="@+id/btnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:background="@android:color/transparent"
                android:textColor="#000000"/>
        </LinearLayout>


    </LinearLayout>
</ScrollView>